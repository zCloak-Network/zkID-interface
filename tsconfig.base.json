{
  "extends": "@zcloak/dev/config/tsconfig.json",
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "composite": false,
    "jsx": "react",
    "paths": {
      "@zcloak/react-wallet/*": ["react-wallet/src/*"],
      "@zcloak/react-wallet": ["react-wallet/src"],
      "@zcloak/zkid-core/*": ["zkid-core/src/*"],
      "@zcloak/zkid-core": ["zkid-core/src"],
      "@zkid/app/*": ["app/src/*"],
      "@zkid/app": ["app/src"],
      "@zkid/app-config/*": ["app-config/src/*"],
      "@zkid/app-config": ["app-config/src"],
      "@zkid/react-components/*": ["react-components/src/*"],
      "@zkid/react-components": ["react-components/src"],
      "@zkid/react-hooks/*": ["react-hooks/src/*"],
      "@zkid/react-hooks": ["react-hooks/src"],
      "@zkid/page-tutorial/*": ["page-tutorial/src/*"],
      "@zkid/page-tutorial": ["page-tutorial/src"],
    },
    "skipLibCheck": true
  }
}
